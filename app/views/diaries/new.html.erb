<h1>Diaries#new</h1>
<p>Find me in app/views/diaries/new.html.erb</p>

<h1>旅の思い出を記す</h1>

<%= form_with model: @diary, local: true, html: { multipart: true, data: { turbo: false } } do|f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label :text, "コメント" %><br>
    <%= f.text_area :text %>
  </div>

  <div>
    <%= f.submit "記録する" %><br>
  </div>
<% end %>
